<h1><%= @task.title %></h1>

<p><%= @task.details %></p>
<% if @task.completed? %>
  <p>You have completed this task.</p>
<% else %>
  <p>This task has not been completed yet.</p>
<% end %>

<%= link_to "Back to list", tasks_path %>
<%= link_to "Edit task",  edit_task_path(@task)%>
<%= link_to "Delete task", task_path(@task), data: { turbo_method:  'delete', turbo_confirm: 'Are you sure my friend?' } %>
